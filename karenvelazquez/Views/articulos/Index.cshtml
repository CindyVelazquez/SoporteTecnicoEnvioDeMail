@model IEnumerable<karenvelazquez.Models.articulo>

@{
    ViewBag.Title = "Index";
}
<style>
    body {
        background: #708090;
        color: black;
    }
    a {
  color: white;
  text-decoration: none;
}
    h2{
        text-align:center;
    }

</style>

<h2>Listado del servicio </h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Crear")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.estado.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.inicio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.final)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.estado.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.inicio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.final)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id=item.idArticulo }) |
            @Html.ActionLink("Detalles", "Detalles", new { id=item.idArticulo }) |
            @Html.ActionLink("Borrar", "Borrar", new { id=item.idArticulo })
        </td>
    </tr>
}

</table>
